<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="AcDisplay" />

    <!--
        SCENE: Clock
    -->

    <style name="AcDisplay.Clock" parent="AcDisplay" >
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">85sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:maxLines">1</item>

        <!-- This is needed to compensate font margins -->
        <item name="android:layout_marginTop">-14sp</item>
        <item name="android:layout_marginBottom">-10sp</item>

        <!-- Compatibility -->
        <item name="font">roboto_thin</item>
        <item name="font_sdk">20</item>
    </style>

    <style name="AcDisplay.Clock.Small" parent="AcDisplay.Clock">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="AcDisplay.Status" parent="AcDisplay">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/acdisplay_subtext_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:maxLines">2</item>
    </style>

    <!--
        SCENE: Clock - shadows
    -->

    <style name="AcDisplay.Clock.WithShadow" parent="AcDisplay.Clock">
        <item name="android:shadowColor">#60000000</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    <style name="AcDisplay.Clock.Small.WithShadow" parent="AcDisplay.Clock.Small">
        <item name="android:shadowColor">#60000000</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    <style name="AcDisplay.Status.WithShadow" parent="AcDisplay.Status">
        <item name="android:shadowColor">#60000000</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    <!--
        SCENE: Notification
    -->

    <style name="AcDisplay.Notification" parent="AcDisplay"/>

    <style name="AcDisplay.Notification.Title" parent="AcDisplay.Notification">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/material_dark_primary_text</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="AcDisplay.Notification.Message" parent="AcDisplay.Notification">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/material_dark_primary_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">8</item>
    </style>

    <style name="AcDisplay.Notification.Subtext" parent="AcDisplay.Notification">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/material_dark_secondary_text</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--
        SCENE: Notification - shadows
    -->

    <style name="AcDisplay.Notification.Title.WithShadow" parent="AcDisplay.Notification.Title">
        <item name="android:shadowColor">#60000000</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    <style name="AcDisplay.Notification.Message.WithShadow" parent="AcDisplay.Notification.Message">
        <item name="android:shadowColor">#60000000</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    <style name="AcDisplay.Notification.Subtext.WithShadow" parent="AcDisplay.Notification.Subtext">
        <item name="android:shadowColor">#60000000</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    <!--
        Timeout
    -->

    <style name="AcDisplayTimeoutProgressBar" parent="android:Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_dash</item>
        <item name="android:minHeight">1dp</item>
    </style>

    <!--
        Timeout - shadows
    -->

    <style name="AcDisplayTimeoutProgressBar.WithShadow" parent="AcDisplayTimeoutProgressBar">
        <item name="android:progressDrawable">@drawable/progress_bar_dash_withshadow</item>
    </style>

</resources>
